:8081 {
    root * /app/public
    encode zstd br gzip

    php_server

    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        -Server
    }

    @forbidden {
        path /.env*
        path /composer.json
        path /composer.lock
        path /package.json
        path /package-lock.json
        path /.git*
        path /storage/logs*
    }
    respond @forbidden 403
}
